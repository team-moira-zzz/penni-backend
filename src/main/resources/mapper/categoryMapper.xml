<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moira.pennibackend.domain.category.mapper.CategoryMapper">
    <!-- 카테고리 목록 조회 -->
    <select id="selectCategoryList" resultType="com.moira.pennibackend.domain.category.dto.response.CategoryResponse">
        SELECT
               id
             , type
             , name
             , display_order as displayOrder
        FROM   ACCOUNT_BOOK_CATEGORY
        WHERE  group_id = #{groupId} AND type = #{type}
    </select>
</mapper>